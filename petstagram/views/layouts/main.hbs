<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="/static/css/styles.css">
    <link rel="icon" type="image/x-icon" href="/static/images/free-30-instagram-stories-icons23_122570.png">
    <title>Petstagram</title>
</head>
<body>

<header>
    <nav class="navbar">
        <div class="container">
            <div class="logo">
                <!-- Link to Home Page -->
                <a href="/">
                    <img width="50px" src="/static/images/free-30-instagram-stories-icons23_122570.png" alt="img1">
                </a>
                <!-- Link to Home Page -->
                <a class="home" href="#">
                    <i>Petstagram</i>
                </a>
            </div>

            <div class="nav-links">
                <ul class="nav-group">
                    <li class="nav-item">
                        <!-- Link to Catalog Page -->
                        <a href="/pets">
                            <i>Catalog</i>
                        </a>
                    </li>
                    <!--For login users-->
                    {{#if isAuthenticated}}
                        <li class="nav-item">
                            <!-- Link to Add Photo Page -->
                            <a href="/pets/create">
                                <i>Add Photo</i>
                            </a>
                        </li>

                        <li class="nav-item">
                            <!-- Link to Profile Page -->
                            <a href="/users/profile">
                                <i>Profile</i>
                            </a>
                        </li>

                        <li class="nav-item">
                            <!-- Link to Logout Page -->
                            <a href="/auth/logout">
                                <i>Logout</i>
                            </a>
                        </li>
                    {{else}}
                        <!--For Guest User-->
                        <li class="nav-item">
                            <!-- Link to Login Page -->
                            <a href="/auth/login">
                                <i>Login</i>
                            </a>
                        </li>
                        <li class="nav-item">
                            <!-- Link to Register Page -->
                            <a href="/auth/register">
                                <i>Register</i>
                            </a>
                        </li>
                    {{/if}}
                </ul>
            </div>
        </div>
    </nav>

</header>

<main>
    {{{body}}}
</main>

<footer class="footer">
    <script>
        function displayErrorMessage(errorMessage) {
            const errorMessageElement = document.createElement('div');
            errorMessageElement.textContent = errorMessage;
            errorMessageElement.className = 'errorContainer';
            errorMessageElement.style.backgroundColor = '#da5555';
            errorMessageElement.style.color = '#ffffff';
            errorMessageElement.style.padding = '1em';
            errorMessageElement.style.zIndex = '100000000';
            document.body.appendChild(errorMessageElement);
            setTimeout(() => {
                errorMessageElement.style.display = 'none';
            }, 3000);
        }
            {{#if error}}
            displayErrorMessage('{{error}}');
            {{/if}}
    </script>

    <span class="footer-section">
