<main>

    <h1>Attach Accessor to {{product.name}}</h1>
    <img src="{{product.imgUrl}}" alt="{{product.name}}" width="100%">
    <p>${{product.price}}</p>

    <form method="post">
        <select name="accessory">
            <option value="">Select Accessory</option>
            {{#each accessoryList}}
                <option value="{{this._id}}">{{this.name}}</option>
            {{/each}}
        </select>
        <button class="btn" type="submit">Attach</button>
    </form>
</main>